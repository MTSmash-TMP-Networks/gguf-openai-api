[Unit]
Description=GGUF OpenAI-like API (llama-cpp, GPU)
After=network.target

[Service]
User=deinuser
Group=deinuser
WorkingDirectory=/home/deinuser/gguf-openai-api

EnvironmentFile=/etc/default/gguf-api
Environment=CUDA_VISIBLE_DEVICES=0
Environment=LLAMA_LOG_LEVEL=info

ExecStart=/usr/bin/python3.11 /home/deinuser/gguf-openai-api/main.py

Restart=on-failure
RestartSec=5
LimitNOFILE=65535

[Install]
WantedBy=multi-user.target
